<Window x:Class="Lab5.WindowShape"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="WindowShape" Height="250" Width="350">
    <StackPanel x:Name="stackPanel" Orientation="Vertical" Background="Azure">
        <StackPanel Orientation="Horizontal">
            <Label Content="Lines color" Margin="20,10"/>
            <ComboBox x:Name="comboBoxFore" Width="150" Margin="20,10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Feel color" Margin="20,10"/>
            <ComboBox x:Name="comboBoxBack" Width="150" Margin="25,10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Lines width" Margin="20,10"/>
            <TextBox x:Name="textBoxWidth" Text="{Binding Path=Width}" Width="150" Margin="17,10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Width="100" Content="OK" Margin="20,10" Click="Button_Click"/>
            <Button Width="100" Content="CANCEL" Margin="20,10"/>
        </StackPanel>
    </StackPanel>
</Window>
